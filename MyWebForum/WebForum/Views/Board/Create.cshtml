@model WebForum.Models.Board.NewBoardModel

<form asp-action="AddBoard" method="post" id="addBoardForm">
	<div class="form-group">
		<label asp-for="Title"></label>
		<input asp-for="Title" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Description"></label>
		<textarea asp-for="Description" class="form-control"></textarea>
	</div>
	<button type="submit" id="submitBoardBtn" class="btn btn-submitBoard">Create Board</button>
</form>