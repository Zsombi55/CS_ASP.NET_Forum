@model WebForum.Models.Forum.NewForumModel

<h1>New Forum | @Model.BoardName</h1>

<form asp-action="AddForum" method="post" id="addForumForm">
	<div class="form-group">
		<label asp-for="Title"></label>
		<input asp-for="Title" class="form-control" />
	</div>
	<div class="form-group">
		<label asp-for="Description"></label>
		<textarea asp-for="Description" class="form-control"></textarea>
	</div>
	<button type="submit" id="submitForumBtn" class="btn btn-submitForum">Create Forum</button>
	<input asp-for="BoardId" type="hidden" />
</form>