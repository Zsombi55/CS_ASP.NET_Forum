@model WebForum.Models.Forum.NewForumModel

<div class="container body-content">
	<div class="row sectionHeader">
		<div class="sectionHeading">
			Create New Forum
		</div>
	</div>

	<div class="row">
		<div id="createForumSection">
			<form id="createForumForm" asp-action="AddForum" method="post" enctype="multipart/form-data">
				<div class="text-danger" asp-validation-summary="All"></div>

				<div class="form-group">
					<label asp-for="Title">Forum Title</label>
					<input class="form-control" asp-for="Title" placeholder="Choose forum title.." />
					<span class="text-danger" asp-validation-summary="Title"></span>
				</div>

				<div class="form-group">
					<label asp-for="Description">Forum Description</label>
					<input class="form-control" asp-for="Description"
						   placeholder="Brief description (max. 255 characters).." />
					<span class="text-danger" asp-validation-summary="Description"></span>
				</div>

				@* Placeholder, NOT USED, no cloud/ server storage is connected.
				<div id="upload">
					<label>Upload Forum Image</label>
					<br />
					<label class="btn btn-default btn-file">
						Browse
						<input asp-for="ImageUpload" typeof="file" style="display: none" />
					</label>
				</div>*@

				<button id="newForumBtn" class="btn btn-submitForum" type="submit">Create Forum</button>
				<input asp-for="BoardId" type="hidden" />
			</form>
		</div>
	</div>	
</div>