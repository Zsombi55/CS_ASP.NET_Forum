@model WebForum.Models.Forum.ForumIndexModel

<h1>Forum</h1>

<table class="table table-hover" id="forumIndexTable">
	<thead>
		<tr>
			@*<th>@Html.DisplayNameFor(model => model.Description)</th>*@
			<th>Title</th>
			<th>Description</th>
			<th>Status</th>
		</tr>
	</thead>
	<tbody>
	@foreach (var forum in Model.ForumList)
	{
		<tr>
			<td>
				<!--{controller=Home}/{action=Index}/{id?}-->
				<a asp-controller="Forum" asp-action="Topic" asp-route-id="@forum.Id">
					@forum.Title
				</a>
			</td>
			<td>
				@forum.Description
			</td>
			<td>
				@if (forum.Status.Equals(1)) { 
					@:Open
				}
				else {
					@:Locked
				}
			</td>
		</tr>
	}
	</tbody>
</table>
