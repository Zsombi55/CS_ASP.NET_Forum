@model WebForum.Models.Post.NewPostModel

<div class="container body-content">
	<div class="row sectionHeader">
		<div class="sectionHeading">
			Reply | @Model.ThreadTitle
		</div>

		@* Placeholder , tutorial had it, I did not add it.
			<div class="forumLogo" style="background-image: url(@Model.ForumimageUrl)"></div>*@

		<span id="headingBtn">
			<a class="btn btn-back" asp-controller="Thread" asp-action="Index"
			   asp-route-id="@Model.ThreadId">Back to Thread</a>
		</span>
	</div>

	<div class="row">
		<div class="thread">
			<h3>@Model.ThreadTitle</h3>
			<p>@Model.ThreadContent</p>
		</div>
	</div>

	<div class="row">
		<div class="createPost">
			<div class="authorBlock">You are submiting this post as @Model.AuthorName</div>

			<form id="AddPostForm" asp-action="AddPost" method="post">
			@*The action "AddPost" is found in "Data / IThreadEntity.cs"*@
				<div class="text-danger" asp-validation-summary="All"></div>
				<div class="form-group">
					<label asp-for="Content">Post: </label>
					<textarea class="form-control" asp-for="Content" rows="20" placeholder="Your post..">
					</textarea>
					<span class="text-danger" asp-validation-for="Content"></span>
				</div>

				<button id="submitPostBtn" class="btn btn-submitPost" type="submit">Submit Post</button>

				<input asp-for="AuthorId" type="hidden" />
				<input asp-for="ThreadId" type="hidden" />
				<input asp-for="ThreadId" type="hidden" />
			</form>
		</div>
	</div>
</div>
