@model WebForum.Models.AppUser.ProfileListModel 

<div class="container body-content">
	<div class="row sectionHeader">
		<div class="sectionHeading">Browse Users</div>
	</div>

	<div id="forumIndexContent" class="row">
		<table id="userIndexTable" class="table table-hover">
			<thead>
				<tr>
					<th>Image</th>
					<th>User Name</th>
					<th>E-Mail</th>
					<th>Member Since</th>
					<th>Rating</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var profile in @Model.UserProfiles) {
					<tr class="userRow">
						<td>
							<div class="userProfilePic" 
								style="background-image: url(@profile.ProfileImgUrl)">
								
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>
