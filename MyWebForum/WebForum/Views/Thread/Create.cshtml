@model WebForum.Models.Thread.NewThreadModel

<div class="container body-content">
	<div class="row sectionHeader">
		<div class="sectionHeading noBorder">
			New Thread | @Model.ForumName
		</div>
		@* Placeholder , tutorial had it, I did not add it.
			<div class="forumLogo" style="background-image: url(@Model.ThreadImageUrl)"></div>*@
		<span id="headingBtn">
			<a class="btn btn-back" asp-controller="Forum"
			   asp-action="Thread" asp-route-id="@Model.ForumId">Back to @Model.ForumName</a>
		</span>
	</div>
</div>

<div class="row">
	<div class="createThreadSection">
		<div class="authorBlock">
			You are submitting as <strong>@Model.AuthorName</strong>.
		</div>

		<form asp-action="AddThread" method="post" id="addThreadForm">
			<div class="form-group">
				<label asp-for="Title"></label>
				<input asp-for="Title" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="Content"></label>
				<textarea asp-for="Content" class="form-control"></textarea>
			</div>
			<button type="submit" id="submitThreadBtn" class="btn btn-submitThread">Create Thread</button>
			<input asp-for="ForumId" type="hidden" />
		</form>
	</div>
</div>
