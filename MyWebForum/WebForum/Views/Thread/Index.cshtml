@model WebForum.Models.Thread.ThreadIndexModel


<div class="container body-content">
	<div class="row threadHeader">
		<div class="threadHeading">
			<span class="threadIndexTitle">
				@Model.Title
			</span>
			<span id="headingBtn">
				<a asp-controller="Forum" asp-action="Forum" asp-route-id="@Model.ForumId"
					class="btn btn-back">
					Back to @Model.ForumName
				</a>
			</span>
		</div>
	</div>
</div>


<h1>@Model.Title</h1>

<div>
	<p>
		Author: @Model.AuthorName
		@if (Model.AuthorRating != 0)
		{
			@: (@Model.AuthorRating)
		}
	</p>
	<p>Date Created: @Model.CreatedAt
	@if(Model.ModifiedAt != null || Model.CreatedAt != Model.ModifiedAt)
	{
		@*this check is not right but it doesn't even work as expected*@
		@: (Date Modified: @Model.ModifiedAt)
	}
	</p>
</div>

<div>
	@Model.Content
</div>


@if (Model.Posts.Any())
{
	foreach (var post in Model.Posts)
	{
		<div>
			<div>
				Author: @post.AuthorName @*(@post.AuthorRating)*@
				Date Created: @post.CreatedAt @*(Date Modified: @post.ModifiedAt)*@
			</div>
			<div>
				@post.Content
			</div>
		</div>
	}
}
