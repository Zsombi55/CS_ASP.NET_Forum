@model WebForum.Models.Thread.ThreadIndexModel

<h1>@Model.Title</h1>

<div>
	Author: @Model.AuthorName (@Model.AuthorRating)
	Date Created: @Model.CreatedAt (Date Modified: @Model.ModifiedAt)
</div>

<div>
	@Model.Content
</div>


@if (Model.Posts.Any())
{
	foreach (var post in Model.Posts)
	{
		<div>
			<div>
				Author: @post.AuthorName (@post.AuthorRating)
				Date Created: @post.CreatedAt (Date Modified: @post.ModifiedAt)
			</div>
			<div>
				@post.Content
			</div>
		</div>
	}
}
