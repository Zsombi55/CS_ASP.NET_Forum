@model WebForum.Models.Thread.ThreadIndexModel

<h1>@Model.Title</h1>

<div>
	Author: @Model.CreatorName (@Model.CreatorRating)
	Date Created: @Model.CreatedAt (Date Modified: @Model.ModifiedAt)
</div>

<div>
	@Model.Content
</div>


@if (Model.Posts.Any())
{
	foreach (var post in Model.Posts)
	{
		<div>
			<div>
				Author: @post.CreatorName (@post.CreatorRating)
				Date Created: @post.CreatedAt (Date Modified: @post.ModifiedAt)
			</div>
			<div>
				@post.Content
			</div>
		</div>
	}
}

<table class="table table-hover" id="threadIndexTable">
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th>Status</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var forum in Model.Th)
		{
			<tr>
				<td>
					<!--{controller=Home}/{action=Index}/{id?}-->
					<a asp-controller="Forum" asp-action="Topic" asp-route-id="@forum.Id">
						@forum.Title
					</a>
				</td>
				<td>
					@forum.Description
				</td>
				<td>
					@if (forum.Status.Equals(1))
					{
						@:Open
					}
					else
					{
						@:Locked
					}
				</td>
			</tr>
		}
	</tbody>
</table>
